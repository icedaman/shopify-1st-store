        {
          "value": "col-lg-4",
          "label": "3 Columns"
        },
        {
          "value": "col-lg-3",
          "label": "4 Columns"
        }
      ],
      "default": "col-lg-3"
    },
    {
      "type": "select",
      "id": "xl_col",
      "label": "Extra Large Devices",
