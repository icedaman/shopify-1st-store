                </ul>
              </li>  
            {%- endif -%}
          {%- endfor -%}
        {%- endif -%}
        <div class="header2__icons">
          <a href="{{ routes.cart_url }}">
            <i class="fas fa-shopping-cart"></i>
          </a>
          {%- if shop.customer_accounts_enabled -%}
